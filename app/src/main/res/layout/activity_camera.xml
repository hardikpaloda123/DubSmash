<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextureView
        android:id="@+id/texture_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/startRecordBtn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_fiber_manual_record_red_24dp"
            android:gravity="center" />


        <Button
            android:id="@+id/stopRecordBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_stop_white_24dp"
            android:gravity="center"
            android:visibility="invisible" />
            <!-- AA - This functionality has been disabled from this screen-->
<!--        <Button
            android:id="@+id/upload_from_gallery"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:background="@android:drawable/stat_sys_upload"
            android:textAllCaps="true" />-->

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="25dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/switchCameraBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_switch_camera_black_24dp"
            android:gravity="center"
            android:visibility="visible" />
    </FrameLayout>

</RelativeLayout>
